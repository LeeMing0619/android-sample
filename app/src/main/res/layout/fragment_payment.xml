<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_color"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_30sdp"
        android:fontFamily="@font/semibold"
        android:gravity="center"
        android:text="Payment"
        android:textColor="@color/blue"
        android:textSize="@dimen/_18sdp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_weight="1"
        android:orientation="vertical">


        <android.support.v7.widget.CardView
            android:id="@+id/visa_card"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_3sdp"
            app:contentPadding="@dimen/_2sdp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:src="@drawable/ic_visa" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/semibold"
                        android:text="**** **** **** 1234"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/semibold"
                        android:text="Due date: April 15th of 2021"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/master_card"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:contentPadding="@dimen/_2sdp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:src="@drawable/ic_mastercard" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/semibold"
                        android:text="**** **** **** 1234"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/semibold"
                        android:text="Due date: April 15th of 2021"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/paypal_card"
            android:layout_width="match_parent"
            app:cardCornerRadius="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_15sdp"
            app:contentPadding="@dimen/_2sdp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_margin="@dimen/_10sdp"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_42sdp"
                    android:src="@drawable/ic_paypal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="right|center_vertical"
                        android:layout_width="match_parent"
                        android:textColor="@color/blue"
                        android:textSize="@dimen/_16sdp"
                        android:fontFamily="@font/semibold"
                        android:text="**** **** **** 1234"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:textColor="@color/light_blue"
                        android:textSize="@dimen/_12sdp"
                        android:fontFamily="@font/semibold"
                        android:text="Due date: April 15th of 2021"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>
    </LinearLayout>

    <Button
        android:id="@+id/add_credit_card_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/border_card"
        android:fontFamily="@font/proximanova_bold"
        android:text="Add credit Card"
        android:textColor="@color/green"
        android:textSize="@dimen/_14sdp" />

    <Button
        android:id="@+id/pay_later_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@drawable/border_card"
        android:fontFamily="@font/proximanova_bold"
        android:text="@string/pay_later"
        android:textColor="@color/green"
        android:textSize="@dimen/_14sdp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_15sdp"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_marginRight="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:background="@drawable/login_btn"
        android:fontFamily="@font/proximanova_bold"
        android:text="Add Payment"
        android:textColor="#fff"
        android:textSize="@dimen/_14sdp"
        android:id="@+id/add_payment_btn"/>

</LinearLayout>